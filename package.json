{
    "name": "reverb-vscode",
    "displayName": "reverb-vscode",
    "description": "Support for the Reverb programming language in VSCode.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.42.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "reverb",
            "aliases": ["reverb", "reverb"],
            "extensions": [".rev",".reverb"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "reverb",
            "scopeName": "source.reverb",
            "path": "./syntaxes/reverb.tmLanguage.json"
        }]
    }
}